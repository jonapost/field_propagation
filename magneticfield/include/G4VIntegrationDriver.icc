inline G4double G4VIntegrationDriver::GetMinStep() const
{  return fMinimumStep;  }

inline G4int G4VIntegrationDriver::GetNumberOfVariables() const
{  return fnvar;  }

inline G4double G4VIntegrationDriver::GetVerboseLevel() const
