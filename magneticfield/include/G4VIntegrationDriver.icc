inline void G4VIntegrationDriver::SetMinStep(G4double newStep)
{  fMinimumStep = newStep;  }

inline void G4VIntegrationDriver::SetEquationOfMotion(G4EquationOfMotion* newEquation)
{fequation = newEquation;}

